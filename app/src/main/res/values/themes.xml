<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HomeWork3" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#FDD835</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/Theme.HomeWork3.TextView</item>

    </style>

    <style name="Theme.My.Textview" parent="Theme.HomeWork3.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textColor">#493B3B</item>
    </style>

    <style name="Theme.My.ButtonView" parent="Theme.HomeWork3.ButtonView">
        <item name="backgroundTint">#55D31F</item>
    </style>

    <style name="Theme.HomeWork3.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#0723D1</item>
        <item name="android:fontFamily">@font/v_digital_strip</item>
    </style>

    <style name="Theme.HomeWork3.ButtonView" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/v_digital_strip</item>
        <item name="backgroundTint">#FDD835</item>
        <item name="strokeColor">@color/purple_700</item>
        <item name="strokeWidth">3dp</item>
        <item name="android:textColor">#0723D1</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">70dp</item>


    </style>

</resources>